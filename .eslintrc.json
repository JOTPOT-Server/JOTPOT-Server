{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
	},
	"extends": "eslint:recommended",
    "parserOptions": {
		"ecmaVersion": 2017
	},
    "rules": {
        "no-this-before-super": "warn",
        "constructor-super": "warn",
		"indent": [
            "error",
            "tab"
        ],
        "linebreak-style": 0,
        "quotes": 0,
        "semi": [
            "warn",
            "always"
		],
		
		
		"no-console": 0,
		"getter-return": 2,
		"no-await-in-loop": 0,
		"no-constant-condition": 2,
		"no-debugger": 1,
		"no-dupe-args": 2,
		"no-dupe-keys": 1,
		"no-func-assign": 1,
		"no-inner-declarations": 0,
		"no-invalid-regexp": 2,
		"no-irregular-whitespace": 1,
		"no-obj-calls": 0,
		"no-unreachable": 1,
		"valid-typeof": 2,
		"accessor-pairs": 2,
		"block-scoped-var": 1,
		"consistent-return": 1,
		"curly": 2,
		"eqeqeq": 0,
		"guard-for-in": 0,
		"no-case-declarations": 2,
		"no-else-return": 1,
		"no-empty-function": 0,
		"no-eval": 2,
		"no-extra-bind": 1,
		"no-extra-label": 1,
		"no-implicit-coercion": 1,
		"no-implied-eval": 1,
		"no-loop-func": 0,
		"no-new": 2,
		"no-new-func": 2,
		"no-octal": 1,
		"no-redeclare": 1,
		"no-self-assign": 2,
		"no-self-compare": 2,
		"no-throw-literal": 2,
		"no-useless-call": 1,
		"no-useless-concat": 1,
		"no-useless-escape": 1,
		"no-useless-return": 1,
		"no-delete-var": 1,
		"no-label-var": 1,
		"no-undef": 2,
		"no-unused-vars": 2,
		"no-use-before-define": 0,
		"callback-return": 1,
		"global-require": 0,
		"handle-callback-err": 2,
		"no-buffer-constructor": 2,
		"no-new-require": 2,
		"no-sync": 0,
		"no-const-assign": 2,
		"no-var": 0,
		"no-useless-constructor": 2,
		"prefer-spread": 1
	},
	"globals": {
		"server": true,
		"requireJPS": false
	}
}